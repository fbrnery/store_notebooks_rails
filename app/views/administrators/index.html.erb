<p id="notice"><%= notice %></p>

<h1>Administrators:</h1>
<a class="w-40 btn btn-outline-primary" href='/admin'>Main menu</a>
  <hr>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.name %></td>
        <td><%= link_to 'Show', administrator %></td>
        <td><%= link_to 'Edit', edit_administrator_path(administrator) %></td>
        <td><%= link_to 'Destroy',  { action: :destroy, id: administrator.id }, 
       method: :delete,
       data: { confirm: "Delete this news item?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Administrator', new_administrator_path %>
