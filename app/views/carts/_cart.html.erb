<article>

<div class="card text-bg-dark" >
  <div class="card-header">
    <h1>Your Cart</h2>
  </div>
 <table>

    <%= render(cart.line_items) %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
  <br>
  <%= button_to 'Empty cart', cart,
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
                <br>

</div>
</article>